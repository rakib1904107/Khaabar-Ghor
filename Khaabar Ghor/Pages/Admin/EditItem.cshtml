@page
@model Khaabar_Ghor.Pages.Admin.EditItemModel
@{
    ViewData["Title"] = "Edit Menu Item";
}

<!-- Link to External CSS -->
<link rel="stylesheet" href="~/css/edititem.css" />

<div class="form-container">
    <h2>Edit Menu Item</h2>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert-danger">
            @Model.ErrorMessage
        </div>
    }

    <!-- Validation Summary -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Form -->
    <form method="post" enctype="multipart/form-data">
        <!-- Hidden Fields -->
        <input type="hidden" asp-for="MenuItem.Id" />
        <input type="hidden" asp-for="MenuItem.ImageUrl" />

        <!-- Name Field -->
        <div class="form-group">
            <label asp-for="MenuItem.Name">Name</label>
            <input asp-for="MenuItem.Name" class="form-control" aria-describedby="nameHelp" />
            <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
        </div>

        <!-- Price Field -->
        <div class="form-group">
            <label asp-for="MenuItem.Price">Price</label>
            <input asp-for="MenuItem.Price" class="form-control" type="number" step="0.01" aria-describedby="priceHelp" />
            <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
        </div>

        <!-- Category Field -->
        <div class="form-group">
            <label asp-for="MenuItem.Category">Category</label>
            <select asp-for="MenuItem.Category" class="form-control">
                <option value="">Select Category</option>
                <option value="Appetizers">Appetizers</option>
                <option value="Main Course">Main Course</option>
                <option value="Desserts">Desserts</option>
                <option value="Beverages">Beverages</option>
            </select>
            <span asp-validation-for="MenuItem.Category" class="text-danger"></span>
        </div>

        <!-- Availability Checkbox -->
        <div class="form-group">
            <label asp-for="MenuItem.IsAvailable">Available</label>
            <input type="checkbox" asp-for="MenuItem.IsAvailable" />
        </div>

        <!-- Image Upload -->
        <div class="form-group">
            <label>Update Image</label>
            <input type="file" name="NewImage" class="form-control" accept="image/*" />
        </div>

        <!-- Buttons -->
        <div class="button-group">
            <button type="submit" class="btn-update">Update Menu Item</button>
            <a asp-page="../Menu" class="btn-cancel" role="button">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}